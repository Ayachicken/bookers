<div class='index'>

<% if flash[:notice] %>
 <div class='flash'>
	<%= flash[:notice] %>
 </div>
<% end %>

<h2 class='headline'>Books</h2>

<table class='table' cellspacing="2">
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th> </th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td>
			<%= book.title %>
		</td>
		<td>
			<%= book.body %>
		</td>
		<td><%= link_to 'show', book_path(book.id) %>
			<%= link_to 'edit', edit_book_path(book.id) %>
			<%= link_to 'destroy', book_path(book.id), method: :delete %>
		</td>
	</tr>
	<% end %>
</table>

<div class='form'>
<h2 class='new'>New book</h2>
<div class='alert'>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
  	<%= pluralize(@book.errors.count, 'error') %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
</div>
<%= form_for(@book) do |f| %>
	<p class='form_data'>Title</p>
	<%= f.text_field :title %>
	<p class='form_data'>Body</p>
	<%= f.text_field :body %>
	<br>
	<%= f.submit 'Create Book' %>
<% end %>
</div>

</div>